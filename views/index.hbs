<header class="catch-phrase">
  <h1>ESSAYEZ AVANT D'ACHETER</h1>
  <h3>Choisissez · Essayez · Achetez</h3>
</header>

<div id="search-bar">
  <form action="/search/brand-details" method="GET">
    <input type="text" name="name" placeholder="Catégorie, produit, référence...">
  </form>
</div>

<div id="list-of-items-parents">
<section id="list-of-items">
  {{#each brands}}
    <a href="/brand/{{id}}"><img src="{{imgPath}}" alt=""></a>
  {{/each}}
</section>
</div>

